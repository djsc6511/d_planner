<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#f1592a"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBackButton"
            android:layout_width="124px"
            android:layout_height="100px"
            android:layout_marginRight="30px"
            android:background="@drawable/backbutton" />

        <TextView
            android:id="@+id/tvRegistTitle"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="시간표 등록"
            android:textColor="#ffffff"
            android:textSize="50px" />

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="100px"
            android:layout_height="100px"
            android:background="@drawable/download" />
        <Button
            android:id="@+id/btnRegistIndivisual"
            android:layout_width="129px"
            android:layout_height="100px"
            android:background="@drawable/plus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@drawable/bg_img"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="110px"
                android:layout_height="60px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="전공"
                android:textColor="#ffffff"
                android:textSize="40px" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="50px"
                android:layout_marginTop="40px"
                android:background="#ffffff"
                android:textSize="60px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="110px"
                android:layout_height="60px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="강좌명"
                android:textColor="#ffffff"
                android:textSize="40px" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="50px"
                android:layout_marginTop="40px"
                android:background="#ffffff"
                android:ems="10"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:textSize="40px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" >

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="110px"
                android:layout_height="60px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="교수명"
                android:textColor="#ffffff"
                android:textSize="40px" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="340px"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="50px"
                android:layout_marginTop="40px"
                android:background="#ffffff"
                android:ems="10"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:textSize="40px" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="102px"
                android:layout_height="80px"
                android:layout_marginBottom="70px"
                android:layout_marginRight="50px"
                android:layout_marginTop="35px"
                android:background="@drawable/searching"
                android:textColor="#3a3a3a" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px">
        <TextView
            android:id="@+id/tv_termInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="30px"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>

    </RelativeLayout>

</LinearLayout>